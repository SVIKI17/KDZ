<!-- views/cards/edit.ejs -->
<div class="form-container">
    <h1>Редактирование карточки</h1>
    
    <form action="/cards/<%= card.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="form-label" for="question">Вопрос:</label>
            <textarea 
                class="form-control" 
                id="question" 
                name="question" 
                rows="3" 
                required><%= card.question %></textarea>
        </div>
        
        <div class="form-group">
            <label class="form-label" for="answer">Ответ:</label>
            <textarea 
                class="form-control" 
                id="answer" 
                name="answer" 
                rows="3" 
                required><%= card.answer %></textarea>
        </div>
        
        <div class="form-group">
            <label class="form-label" for="deckId">Колода:</label>
            <select class="form-control" id="deckId" name="deckId" required>
                <% decks.forEach(deck => { %>
                    <option value="<%= deck.id %>" 
                            <%= deck.id === card.deckId ? 'selected' : '' %>>
                        <%= deck.name %>
                    </option>
                <% }); %>
            </select>
        </div>
        
        <div class="form-group">
            <label class="form-label" for="tags">Теги (через запятую):</label>
            <input 
                type="text" 
                class="form-control" 
                id="tags" 
                name="tags" 
                value="<%= card.tags || '' %>"
                placeholder="биология, наука, растения">
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Сохранить изменения
            </button>
            <a href="/decks/<%= card.deckId %>" class="btn btn-outline">Отмена</a>
            
            <button type="button" 
                    class="btn btn-error" 
                    onclick="confirmDelete()">
                <i class="fas fa-trash"></i> Удалить карточку
            </button>
        </div>
    </form>
    
    <form id="deleteForm" 
          action="/cards/<%= card.id %>?_method=DELETE" 
          method="POST" 
          style="display: none;">
    </form>
</div>

<script>
function confirmDelete() {
    if (confirm('Вы уверены, что хотите удалить эту карточку?')) {
        document.getElementById('deleteForm').submit();
    }
}
</script>

