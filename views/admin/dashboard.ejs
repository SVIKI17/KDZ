}

/* Типы уведомлений */
.notification-success {
    background: linear-gradient(135deg, rgba(76, 175, 80, 0.95) 0%, rgba(56, 142, 60, 0.95) 100%);
    border-color: rgba(129, 199, 132, 0.5);
