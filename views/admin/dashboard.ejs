<!-- views/admin/dashboard.ejs -->
<div class="admin-header">
    <h1>Административная панель</h1>
    <div class="admin-stats">
        <div class="stat-card">
            <h3><%= users.length %></h3>
            <p>Пользователей</p>
        </div>
        <div class="stat-card">
            <h3><%= pendingDecks.length %></h3>
            <p>Колод на модерации</p>
        </div>
        <div class="stat-card">
            <h3><%= publicDecksCount || 0 %></h3>
            <p>Одобренных колод</p>
        </div>
    </div>
    

    <div class="admin-actions">
        <a href="/library" class="btn btn-outline">
            <i class="fas fa-book-open"></i> Библиотека
        </a>
        <a href="/logout" class="btn btn-logout">
            <i class="fas fa-sign-out-alt"></i> Выход
        </a>
    </div>
</div>

<div class="admin-tabs">
    <button class="tab-btn active" onclick="showTab('moderation')">Модерация</button>
    <button class="tab-btn" onclick="showTab('users')">Пользователи</button>
    <button class="tab-btn" onclick="showTab('stats')">Статистика</button>
</div>

<div class="tab-content" id="moderationTab">
    <h2>Колоды на модерации</h2>
    
    <% if (pendingDecks.length === 0) { %>
        <div class="empty-state">
            <i class="fas fa-check-circle fa-3x"></i>
            <p>Нет колод, ожидающих модерации</p>
        </div>
    <% } else { %>
        <div class="moderation-list">
            <% pendingDecks.forEach(deck => { %>
                <div class="moderation-item card" id="deck-<%= deck.id %>">
                    <div class="moderation-header">
                        <h3><%= deck.name %></h3>
                       
                        <div class="moderation-actions">
                            <button class="btn btn-primary btn-small" 
                                    onclick="approveDeck(<%= deck.id %>)">
                                <i class="fas fa-check"></i> Одобрить
                            </button>
                            <button class="btn btn-error btn-small" 
                                    onclick="rejectDeck(<%= deck.id %>)">
                                <i class="fas fa-times"></i> Отклонить
                            </button>
                        </div>
                    </div>
                    
                    <p class="deck-description"><%= deck.description || 'Без описания' %></p>
                    
                    <div class="moderation-meta">
                        <span class="moderation-author">
                            <i class="fas fa-user"></i> <%= deck.User.username %>
                        </span>
                        <span class="moderation-email">
                            <i class="fas fa-envelope"></i> <%= deck.User.email %>
                        </span>
                        <span class="moderation-date">
                            <i class="fas fa-calendar"></i> 
                            <%= new Date(deck.createdAt).toLocaleDateString() %>
                        </span>
                        <span class="moderation-cards">
                            <i class="fas fa-cards"></i> 
                            <%= deck.Cards ? deck.Cards.length : 0 %> карточек
                        </span>
                    </div>
                    
                    <div class="moderation-preview">
                        <a href="/decks/<%= deck.id %>" target="_blank" class="btn btn-outline btn-small">
                            <i class="fas fa-external-link-alt"></i> Просмотреть колоду
                        </a>
                        <button class="btn btn-outline btn-small" onclick="deleteDeck(<%= deck.id %>)">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<div class="tab-content" id="usersTab" style="display: none;">
    <h2>Управление пользователями</h2>
    
    <div class="search-box">
        <input type="text" id="userSearch" placeholder="Поиск пользователей..." class="form-control">
        <button class="btn btn-primary" onclick="searchUsers()">
            <i class="fas fa-search"></i> Найти
        </button>
    </div>
    
    <div class="users-table">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Роль</th>
                    <th>Дата регистрации</th>
                    <th>Колод</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody id="usersTableBody">
                <% users.forEach(user => { %>
                    <tr id="user-<%= user.id %>">
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td>
                            <span class="role-badge <%= user.role %> <%= user.id === 1 ? 'main-admin' : '' %>">
                                <%= user.role === 'admin' ? (user.id === 1 ? 'Главный Админ' : 'Администратор') : 
                                user.role === 'teacher' ? 'Преподаватель' : 'Студент' %>
                            </span>
                        </td>
                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                        <td><%= user.DeckCount || 0 %></td>
                        <td>
                            <div class="user-actions">
                            
                                <div class="dropdown role-dropdown">
                                    <button class="btn btn-primary btn-small dropdown-toggle" 
                                            data-user-id="<%= user.id %>"
                                            data-current-role="<%= user.role %>"
                                            onclick="toggleRoleDropdown(this)"
                                            <%= user.id === 1 || user.id === currentUserId ? 'disabled' : '' %>>
                                        <i class="fas fa-user-cog"></i> Роль
                                    </button>
                                    
                                    <div class="dropdown-menu" id="roleDropdown-<%= user.id %>" style="display: none;">
                                        <a onclick="changeUserRole(<%= user.id %>, 'student')"
                                        class="<%= user.role === 'student' ? 'active' : '' %>">
                                            <i class="fas fa-graduation-cap"></i> Студент
                                        </a>
                                        <a onclick="changeUserRole(<%= user.id %>, 'teacher')"
                                        class="<%= user.role === 'teacher' ? 'active' : '' %>">
                                            <i class="fas fa-chalkboard-teacher"></i> Преподаватель
                                        </a>
                                   
                                        <% if (user && currentUserId === 1 && user.id !== 1) { %>
                                            <a onclick="changeUserRole(<%= user.id %>, 'admin')"
                                            class="<%= user.role === 'admin' ? 'active' : '' %>">
                                                <i class="fas fa-shield-alt"></i> Администратор
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                                
                              
                                <button class="btn btn-error btn-small btn-delete" 
                                        onclick="deleteUser(<%= user.id %>)"
                                        <%= (user.id === 1 || user.id === currentUserId || 
                                            (user.role === 'admin' && currentUserId !== 1)) ? 'disabled' : '' %>
                                        title="<%= user.id === 1 ? 'Нельзя удалить главного администратора' : 
                                                user.id === currentUserId ? 'Нельзя удалить самого себя' : 
                                                user.role === 'admin' && currentUserId !== 1 ? 'Только главный администратор может удалять администраторов' : 
                                                'Удалить пользователя' %>">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

