<script>

let currentUserId = <%= user ? user.id : 0 %>;
console.log('Текущий пользователь ID:', currentUserId);

// Функции для работы с вкладками
function showTab(tabName) {
    console.log('Переключение на вкладку:', tabName);
    
  
    document.querySelectorAll('.tab-content').forEach(tab => {
        tab.style.display = 'none';
    });
    
    
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    
  
    const tabElement = document.getElementById(tabName + 'Tab');
    if (tabElement) {
        tabElement.style.display = 'block';
    }
    
   
    event.target.classList.add('active');
    
    // Если открываем вкладку статистики, загружаем данные
    if (tabName === 'stats') {
        loadStatistics();
        loadRecentActivity();
    }
}

// Функции для модерации колод
async function approveDeck(deckId) {
    if (confirm('Одобрить эту колоду для публикации?')) {
        try {
            showNotification('Одобряем колоду...', 'info');
            
            const response = await fetch(`/admin/decks/${deckId}/approve`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                credentials: 'same-origin'
            });
            
            const data = await response.json();
            
            if (data.success) {
                // Удаляем элемент из списка
                const deckElement = document.getElementById(`deck-${deckId}`);
                if (deckElement) {
                    deckElement.style.opacity = '0';
                    deckElement.style.transform = 'translateX(-20px)';
                    setTimeout(() => {
                        deckElement.remove();
                        updatePendingCount();
                    }, 300);
                }
                
                showNotification('Колода успешно одобрена!', 'success');
            } else {
                showNotification(data.error || 'Ошибка при одобрении колоды', 'error');
            }
        } catch (error) {
            console.error('Ошибка при одобрении колоды:', error);
            showNotification('Ошибка сервера', 'error');
        }
    }
}

async function rejectDeck(deckId) {
    const reason = prompt('Укажите причину отклонения:');
    if (reason !== null) {
        try {
            showNotification('Отклоняем колоду...', 'info');
            
            const response = await fetch(`/admin/decks/${deckId}/reject`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                credentials: 'same-origin',
                body: JSON.stringify({ reason: reason })
            });
            
            const data = await response.json();
            
            if (data.success) {
                // Удаляем элемент из списка
                const deckElement = document.getElementById(`deck-${deckId}`);
                if (deckElement) {
                    deckElement.style.opacity = '0';
                    deckElement.style.transform = 'translateX(20px)';
                    setTimeout(() => {
                        deckElement.remove();
                        updatePendingCount();
                    }, 300);
                }
                
                showNotification('Колода отклонена!', 'success');
            } else {
                showNotification(data.error || 'Ошибка при отклонении колоды', 'error');
            }
        } catch (error) {
            console.error('Ошибка при отклонении колоды:', error);
            showNotification('Ошибка сервера', 'error');
        }
    }
}

async function deleteDeck(deckId) {
    if (confirm('Вы уверены, что хотите удалить эту колоду? Все карточки внутри также будут удалены.')) {
        try {
            showNotification('Удаляем колоду...', 'info');
            
            const response = await fetch(`/decks/${deckId}?_method=DELETE`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                credentials: 'same-origin'
            });
            
            if (response.ok) {
                // Удаляем элемент из списка
                const deckElement = document.getElementById(`deck-${deckId}`);
                if (deckElement) {
                    deckElement.style.opacity = '0';
                    deckElement.style.transform = 'scale(0.8)';
                    setTimeout(() => {
                        deckElement.remove();
                        updatePendingCount();
                    }, 300);
                }
                
                showNotification('Колода успешно удалена!', 'success');
            } else {
                showNotification('Ошибка при удалении колоды', 'error');
            }
        } catch (error) {
            console.error('Ошибка при удалении колоды:', error);
            showNotification('Ошибка сервера', 'error');
        }
    }
}

function searchUsers() {
    const searchTerm = document.getElementById('userSearch').value.toLowerCase();
    const rows = document.querySelectorAll('#usersTableBody tr');
    
    rows.forEach(row => {
        const username = row.cells[1].textContent.toLowerCase();
        const email = row.cells[2].textContent.toLowerCase();
        
        if (username.includes(searchTerm) || email.includes(searchTerm)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

// Функции для статистики
async function loadStatistics() {
    try {
        const response = await fetch('/api/stats');
        const data = await response.json();
        
        if (data.success) {
            document.getElementById('totalUsers').textContent = data.usersCount;
            document.getElementById('totalDecks').textContent = data.decksCount;
            document.getElementById('totalCards').textContent = data.cardsCount;
            document.getElementById('publicDecks').textContent = data.publicDecksCount;
        }
    } catch (error) {
        console.error('Ошибка при загрузке статистики:', error);
    }
}

async function loadRecentActivity() {
    try {
        const response = await fetch('/api/admin/activity');
        const data = await response.json();
        
        const activityList = document.getElementById('activityList');
        if (data.success && data.activities && data.activities.length > 0) {
            activityList.innerHTML = '';
            data.activities.forEach(activity => {
                const activityItem = document.createElement('div');
                activityItem.className = 'activity-item';
                activityItem.innerHTML = `
                    <i class="fas fa-${activity.icon || 'info-circle'}"></i>
                    <p>${activity.message}</p>
                    <small>${new Date(activity.timestamp).toLocaleString()}</small>
                `;
                activityList.appendChild(activityItem);
            });
        } else {
            activityList.innerHTML = `
                <div class="activity-item">
                    <i class="fas fa-info-circle"></i>
                    <p>Нет данных об активности</p>
                </div>
            `;
        }
    } catch (error) {
        console.error('Ошибка при загрузке активности:', error);
    }
}

// Вспомогательные функции
function updatePendingCount() {
    const pendingItems = document.querySelectorAll('.moderation-item');
    const statCard = document.querySelector('.admin-stats .stat-card:nth-child(2) h3');
    if (statCard) {
        statCard.textContent = pendingItems.length;
    }
}

function showNotification(message, type = 'info') {
    
    const oldNotifications = document.querySelectorAll('.admin-notification');
    oldNotifications.forEach(notification => {
        if (notification.parentNode) {
            notification.remove();
        }
    });
    
    
    const notification = document.createElement('div');
    notification.className = `admin-notification notification-${type}`;
    notification.innerHTML = `
        <span>${message}</span>
        <button onclick="this.parentElement.remove()">×</button>
    `;
    
    document.querySelector('.admin-header').appendChild(notification);
    
    
    setTimeout(() => {
        if (notification.parentNode) {
            notification.remove();
        }
    }, 5000);
}

// Функции для работы с ролями пользователей
function toggleRoleDropdown(button) {
    const userId = button.getAttribute('data-user-id');
    const dropdown = document.getElementById(`roleDropdown-${userId}`);
    
    if (!dropdown) {
        console.error('Dropdown не найден для пользователя:', userId);
        return;
    }
    
   
    document.querySelectorAll('.dropdown-menu').forEach(menu => {
        if (menu.id !== `roleDropdown-${userId}`) {
            menu.classList.remove('show');
            menu.style.display = 'none';
        }
    });
    
    
    const isVisible = dropdown.classList.contains('show');
    dropdown.classList.toggle('show');
    dropdown.style.display = isVisible ? 'none' : 'block';
    
    
    document.addEventListener('click', function closeDropdown(event) {
        if (!dropdown.contains(event.target) && event.target !== button) {
            dropdown.classList.remove('show');
            dropdown.style.display = 'none';
            document.removeEventListener('click', closeDropdown);
        }
    });
}

// Функция изменения роли пользователя
async function changeUserRole(userId, newRole) {
    const currentUserId = <%= user ? user.id : 0 %>;
    const isCurrentUserMainAdmin = currentUserId === 1;
    
    const userRow = document.getElementById(`user-${userId}`);
    const currentRole = userRow.querySelector('.role-badge').className.includes('admin') ? 'admin' : 
                       userRow.querySelector('.role-badge').className.includes('teacher') ? 'teacher' : 'student';
    
    const roleNames = {
        'student': 'Студент',
        'teacher': 'Преподаватель',
        'admin': 'Администратор'
    };
    
    // Проверка 1: Нельзя менять свою роль
    if (userId === currentUserId) {
        return showNotification('Вы не можете изменить свою собственную роль', 'error');
    }
    
    // Проверка 2: Никто не может менять роль главного администратора
    if (userId === 1) {
        return showNotification('Роль главного администратора не может быть изменена', 'error');
    }
    
    // Проверка 3: Не главный администратор не может менять роли администраторам
    if (currentRole === 'admin' && !isCurrentUserMainAdmin) {
        return showNotification('Только главный администратор может изменять роли администраторов', 'error');
    }
    
    // Проверка 4: Не главный администратор не может назначать администраторов
    if (newRole === 'admin' && !isCurrentUserMainAdmin) {
        return showNotification('Только главный администратор может назначать администраторов', 'error');
    }
    
    if (confirm(`Изменить роль пользователя на "${roleNames[newRole]}"?`)) {
        try {
            showNotification('Изменяем роль пользователя...', 'info');
            
            const response = await fetch(`/admin/users/${userId}/role`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                credentials: 'same-origin',
                body: JSON.stringify({ role: newRole })
            });
            
            const data = await response.json();
            
            if (data.success) {
                // Обновляем бейдж
                const roleBadge = userRow.querySelector('.role-badge');
                roleBadge.className = `role-badge ${newRole} ${userId === 1 ? 'main-admin' : ''}`;
                roleBadge.textContent = newRole === 'admin' && userId === 1 ? 'Главный Админ' : roleNames[newRole];
                
                showNotification(`Роль пользователя изменена на "${roleNames[newRole]}"`, 'success');
            } else {
                showNotification(data.error || 'Ошибка при изменении роли', 'error');
            }
        } catch (error) {
            console.error('Ошибка при изменении роли:', error);
            showNotification('Ошибка сервера', 'error');
        }
    }
}

// Функция для удаления пользователей
async function deleteUser(userId) {
    const currentUserId = <%= user ? user.id : 0 %>;
    const isCurrentUserMainAdmin = currentUserId === 1;
    
    const userRow = document.getElementById(`user-${userId}`);
    const currentRole = userRow.querySelector('.role-badge').className.includes('admin') ? 'admin' : 
                       userRow.querySelector('.role-badge').className.includes('teacher') ? 'teacher' : 'student';
    
    const username = userRow.cells[1].textContent;
    
    
    if (userId === currentUserId) {
        return showNotification('Вы не можете удалить самого себя', 'error');
    }
    
    if (userId === 1) {
        return showNotification('Главный администратор не может быть удален', 'error');
    }
    
    if (currentRole === 'admin' && !isCurrentUserMainAdmin) {
        return showNotification('Только главный администратор может удалять администраторов', 'error');
    }
    
    const confirmationMessage = 
        `Вы уверены, что хотите удалить пользователя "${username}"?\n\n` +
        (currentRole === 'admin' ? '⚠️ ВНИМАНИЕ: Вы удаляете администратора системы!\n' : '') +
        `ID пользователя: ${userId}\n` +
        'Все колоды и карточки пользователя также будут удалены.';
    
    if (!confirm(confirmationMessage)) {
        return;
    }
    
    try {
        showNotification('Удаляем пользователя...', 'info');
        
        const response = await fetch(`/admin/users/${userId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            credentials: 'same-origin'
        });
        
        const data = await response.json();
        
        if (data.success) {
            userRow.remove();
            showNotification('Пользователь успешно удален', 'success');
        } else {
            showNotification(data.error || 'Ошибка при удалении пользователя', 'error');
        }
    } catch (error) {
        console.error('Ошибка при удалении пользователя:', error);
        showNotification('Ошибка сервера при удалении пользователя', 'error');
    }
}

// Новая функция для обновления статистики
async function updateAdminStats() {
    try {
        const response = await fetch('/api/stats');
        const data = await response.json();
        
        if (data.success) {
            
            const statCards = document.querySelectorAll('.stats-cards .stat-card');
            if (statCards.length >= 4) {
                statCards[0].querySelector('h3').textContent = data.usersCount || 0;
                statCards[1].querySelector('h3').textContent = data.decksCount || 0;
                statCards[2].querySelector('h3').textContent = data.cardsCount || 0;
                statCards[3].querySelector('h3').textContent = data.publicDecksCount || 0;
            }
            
            
            const totalUsersElement = document.getElementById('totalUsers');
            if (totalUsersElement) {
                totalUsersElement.textContent = data.usersCount || 0;
            }
        }
    } catch (error) {
        console.error('Ошибка при обновлении статистики:', error);
    }
}

// Инициализация при загрузке страницы
document.addEventListener('DOMContentLoaded', function() {
    const currentUserId = <%= user ? user.id : 0 %>;
    const isCurrentUserMainAdmin = currentUserId === 1;
    
   
    document.querySelectorAll('.dropdown-menu').forEach(dropdown => {
        const adminOption = dropdown.querySelector('a[onclick*="\'admin\'"]');
        if (adminOption && !isCurrentUserMainAdmin) {
            adminOption.classList.add('hide-admin-option');
        }
    });
    
    
    if (document.getElementById('statsTab').style.display !== 'none') {
        loadStatistics();
        loadRecentActivity();
    }
});
