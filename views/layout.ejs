<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | КДЗ</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <i class="fas fa-cards"></i> КДЗ
            </a>
            
            <div class="nav-links">
                <a href="/" class="nav-link">Главная</a>
                
                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <a href="/admin" class="nav-link">
                            <i class="fas fa-shield-alt"></i> Админ
                        </a>
                    <% } else { %>
                        <a href="/dashboard" class="nav-link">Личный кабинет</a>
                        <a href="/library" class="nav-link">Библиотека</a>
                    <% } %>
                    
                    <div class="user-menu">
                        <span class="user-name">
                            <i class="fas fa-user"></i> <%= user.username %>
                            <span class="user-role-badge <%= user.role %>">
                                <%= user.role === 'admin' ? 'Админ' : 
                                   user.role === 'teacher' ? 'Преподаватель' : 'Студент' %>
                            </span>
                        </span>
                        <a href="/logout" class="btn btn-outline btn-small logout-btn">
                            <i class="fas fa-sign-out-alt"></i> Выход
                        </a>
                    </div>
                <% } else { %>
                    <a href="/library" class="nav-link">Библиотека</a>
                    <div class="auth-buttons">
                        <a href="/login" class="btn btn-outline btn-small">Войти</a>
                        <a href="/register" class="btn btn-primary btn-small">Регистрация</a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="container">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
        
        <%- body %>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>© 2024 КДЗ - Карточки для заучивания. Все права защищены.</p>
            <p>Учебный проект по дисциплине "КДЗ"</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    
    <style>
    .user-role-badge {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: bold;
        margin-left: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .user-role-badge.admin {
        background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
        color: white;
        border: 1px solid #e57373;
    }
    
    .user-role-badge.teacher {
        background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
        color: white;
        border: 1px solid #64b5f6;
    }
    
    .user-role-badge.student {
        background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
        color: white;
        border: 1px solid #81c784;
    }
    
    .logout-btn {
        background: #f8f9fa;
        border-color: #dee2e6;
        color: #6c757d;
        transition: all 0.3s ease;
    }
    
    .logout-btn:hover {
        background: #dc3545;
        border-color: #dc3545;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
    }
    </style>
</body>
</html>