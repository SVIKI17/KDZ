<!-- views/auth/register.ejs -->
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i class="fas fa-user-plus auth-icon"></i>
            <h1>Регистрация</h1>
            <p class="auth-subtitle">Создайте свой аккаунт в КДЗ</p>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error" style="margin-bottom: 25px;">
            <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
        <% } %>
        
        <form action="/register" method="POST">
            <div class="form-group">
                <label class="form-label" for="username">
                    <i class="fas fa-user"></i> Имя пользователя:
                </label>
                <input 
                    type="text" 
                    class="form-control <%= typeof error !== 'undefined' && error.includes('имя пользователя') ? 'error-input' : '' %>" 
                    id="username" 
                    name="username" 
                    placeholder="Введите имя пользователя" 
                    required
                    value="<%= typeof username !== 'undefined' ? username : '' %>">
                <small class="form-hint">Минимум 3 символа</small>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="email">
                    <i class="fas fa-envelope"></i> Email:
                </label>
                <input 
                    type="email" 
                    class="form-control <%= typeof error !== 'undefined' && error.includes('почта') ? 'error-input' : '' %>" 
                    id="email" 
                    name="email" 
                    placeholder="Введите ваш email" 
                    required
                    value="<%= typeof email !== 'undefined' ? email : '' %>">
                <small class="form-hint">Пример: user@example.com</small>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="password">
                    <i class="fas fa-lock"></i> Пароль:
                </label>
                <input 
                    type="password" 
                    class="form-control" 
                    id="password" 
                    name="password" 
                    placeholder="Введите пароль" 
                    required>
                <small class="form-hint">Минимум 6 символов</small>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="confirmPassword">
                    <i class="fas fa-lock"></i> Подтвердите пароль:
                </label>
                <input 
                    type="password" 
                    class="form-control" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    placeholder="Повторите пароль" 
                    required>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block auth-btn">
                <i class="fas fa-user-plus"></i> Зарегистрироваться
            </button>
        </form>
        
        <div class="auth-links">
            <p>Уже есть аккаунт? <a href="/login" class="auth-link">Войдите</a></p>
            <p><a href="/" class="auth-link home-link">
                <i class="fas fa-home"></i> Вернуться на главную
            </a></p>
        </div>
    </div>
</div>

<style>

/* Основные стили для стрницы регистрации */
.auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
    padding: 20px;
}

.auth-card {
    background: white;
    border-radius: 16px;
    padding: 50px 40px;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 20px 50px rgba(33, 150, 243, 0.25);
    border: 2px solid #bbdefb;
    position: relative;
    overflow: hidden;
}

.auth-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 8px;
    background: linear-gradient(90deg, #2196F3 0%, #64b5f6 100%);
    border-radius: 16px 16px 0 0;
}

.auth-header {
    text-align: center;
    margin-bottom: 40px;
}

.auth-icon {
    font-size: 50px;
    color: #2196F3;
    margin-bottom: 20px;
    display: inline-block;
    background: #e3f2fd;
    width: 80px;
    height: 80px;
    line-height: 80px;
    border-radius: 50%;
    border: 3px solid #bbdefb;
}

.auth-card h1 {
    color: #1976D2;
    margin-bottom: 10px;
    font-size: 2.2rem;
    font-weight: 700;
}

.auth-subtitle {
    color: #546e7a;
    font-size: 1.1rem;
    opacity: 0.9;
}

.form-group {
    margin-bottom: 25px;
}

.form-label {
    display: block;
    margin-bottom: 10px;
    color: #1976D2;
    font-weight: 600;
    font-size: 15px;
}

.form-label i {
    margin-right: 10px;
    color: #2196F3;
    font-size: 14px;
}

.form-control {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid #bbdefb;
    border-radius: 10px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8fbff;
    color: #2c3e50;
    box-sizing: border-box;
}

.form-control:focus {
    outline: none;
    border-color: #2196F3;
    box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
    background: white;
}

.form-control::placeholder {
    color: #90a4ae;
    opacity: 0.7;
}

.form-hint {
    display: block;
    margin-top: 6px;
    color: #607d8b;
    font-size: 13px;
    font-style: italic;
}

/* Стили для полей с ошибками */
.error-input {
    border-color: #f44336 !important;
    background-color: #ffebee !important;
    animation: shake 0.5s ease-in-out;
}

@keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
    20%, 40%, 60%, 80% { transform: translateX(5px); }
}

/* стили для алерта с ошибкой */
.alert {
    padding: 15px 20px;
    border-radius: 10px;
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    gap: 12px;
    animation: slideIn 0.3s ease;
}

.alert-error {
    background-color: #ffebee;
    color: #c62828;
    border: 2px solid #ffcdd2;
}

.alert i {
    font-size: 18px;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.auth-btn {
    background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
    color: white;
    border: none;
    padding: 18px;
    font-size: 18px;
    font-weight: 700;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    margin-top: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
}

.auth-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(33, 150, 243, 0.3);
    background: linear-gradient(135deg, #1976D2 0%, #1565C0 100%);
}

.auth-btn:active {
    transform: translateY(-1px);
}

.auth-links {
    text-align: center;
    margin-top: 30px;
    padding-top: 25px;
    border-top: 2px solid #e3f2fd;
}

.auth-links p {
    margin: 15px 0;
    color: #546e7a;
}

.auth-link {
    color: #1976D2;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    padding: 2px 0;
}

.auth-link:hover {
    color: #2196F3;
    text-decoration: underline;
}

.auth-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #2196F3;
    transition: width 0.3s ease;
}

.auth-link:hover::after {
    width: 100%;
}

.home-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #e3f2fd;
    padding: 10px 20px;
    border-radius: 8px;
    border: 2px solid #bbdefb;
    transition: all 0.3s ease;
}

.home-link:hover {
    background: #2196F3;
    color: white !important;
    text-decoration: none;
    border-color: #2196F3;
}

.home-link:hover i {
    color: white;
}

/* Адаптивность */
@media (max-width: 768px) {
    .auth-card {
        padding: 40px 25px;
        margin: 20px;
    }
    
    .auth-icon {
        font-size: 40px;
        width: 70px;
        height: 70px;
        line-height: 70px;
    }
    
    .auth-card h1 {
        font-size: 1.8rem;
    }
    
    .auth-subtitle {
        font-size: 1rem;
    }
    
    .form-control {
        padding: 14px 18px;
    }
    
    .auth-btn {
        padding: 16px;
        font-size: 16px;
    }
}

/* Анимация появления */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.auth-card {
    animation: fadeInUp 0.6s ease;
}
</style>

<script>

document.addEventListener('DOMContentLoaded', function() {
    // Проверка совпадения паролей
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    const form = document.querySelector('form');
    
    if (password && confirmPassword && form) {
        form.addEventListener('submit', function(event) {
            
            clearPasswordError();
            
            if (password.value !== confirmPassword.value) {
                event.preventDefault();
                
                
                confirmPassword.classList.add('error-input');
                
                
                showPasswordError('Пароли не совпадают');
                
                return false;
            }
            
            
            if (password.value.length < 6) {
                event.preventDefault();
                
                password.classList.add('error-input');
                showPasswordError('Пароль должен содержать минимум 6 символов');
                
                return false;
            }
            
            
            const email = document.getElementById('email');
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email.value)) {
                event.preventDefault();
                
                email.classList.add('error-input');
                showEmailError('Введите корректный email адрес');
                
                return false;
            }
            
            
            const username = document.getElementById('username');
            if (username.value.length < 3) {
                event.preventDefault();
                
                username.classList.add('error-input');
                showUsernameError('Имя пользователя должно содержать минимум 3 символа');
                
                return false;
            }
        });
        
        
        [password, confirmPassword].forEach(input => {
            input.addEventListener('input', function() {
                this.classList.remove('error-input');
                clearPasswordError();
            });
        });
        
        const emailInput = document.getElementById('email');
        if (emailInput) {
            emailInput.addEventListener('input', function() {
                this.classList.remove('error-input');
                clearEmailError();
            });
        }
        
        const usernameInput = document.getElementById('username');
        if (usernameInput) {
            usernameInput.addEventListener('input', function() {
                this.classList.remove('error-input');
                clearUsernameError();
            });
        }
    }
    
    // Функции для отображения ошибок
    function showPasswordError(message) {
        let errorDiv = document.querySelector('.password-error');
        if (!errorDiv) {
            errorDiv = document.createElement('div');
            errorDiv.className = 'password-error alert alert-error';
            errorDiv.style.marginTop = '10px';
            confirmPassword.parentNode.appendChild(errorDiv);
        }
        
        errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
    }
    
    function showEmailError(message) {
        let errorDiv = document.querySelector('.email-error');
        if (!errorDiv) {
            errorDiv = document.createElement('div');
            errorDiv.className = 'email-error alert alert-error';
            errorDiv.style.marginTop = '10px';
            document.getElementById('email').parentNode.appendChild(errorDiv);
        }
        
        errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
    }
    
    function showUsernameError(message) {
        let errorDiv = document.querySelector('.username-error');
        if (!errorDiv) {
            errorDiv = document.createElement('div');
            errorDiv.className = 'username-error alert alert-error';
            errorDiv.style.marginTop = '10px';
            document.getElementById('username').parentNode.appendChild(errorDiv);
        }
        
        errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
    }
    
    function clearPasswordError() {
        const errorDiv = document.querySelector('.password-error');
        if (errorDiv) errorDiv.remove();
    }
    
    function clearEmailError() {
        const errorDiv = document.querySelector('.email-error');
        if (errorDiv) errorDiv.remove();
    }
    
    function clearUsernameError() {
        const errorDiv = document.querySelector('.username-error');
        if (errorDiv) errorDiv.remove();
    }
    
    // Плавная анимация для всей формы
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach((input, index) => {
        input.style.opacity = '0';
        input.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            input.style.transition = 'all 0.5s ease';
            input.style.opacity = '1';
            input.style.transform = 'translateY(0)';
        }, 100 * (index + 1));
    });
});
</script>