<div class="deck-view-header">
    <div class="deck-header-top">
        <a href="/dashboard" class="btn btn-outline btn-small">
            <i class="fas fa-arrow-left"></i> Вернуться в кабинет
        </a>
        
        <div class="deck-info">
            <h1><%= deck.name %></h1>
            <% if (deck.User && deck.User.username) { %>
                <p class="deck-author">Автор: <%= deck.User.username %></p>
            <% } else if (deck.userId) { %>
                <p class="deck-author">Автор: ID <%= deck.userId %></p>
            <% } %>
            <p class="deck-description"><%= deck.description || 'Без описания' %></p>
        </div>
        
        <% if (user && (user.id === deck.userId || user.role === 'admin')) { %>
            <div class="deck-owner-actions">
                <% if (deck.status === 'draft' && deck.isPublic) { %>
                    <form action="/decks/<%= deck.id %>/publish" method="POST">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Опубликовать
                        </button>
                    </form>
                <% } %>
                
                <a href="/decks/<%= deck.id %>/edit" class="btn btn-outline">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
            </div>
        <% } %>
    </div>
</div>

<div class="deck-stats">
    <div class="stat">
        <span class="stat-value"><%= deck.Cards ? deck.Cards.length : 0 %></span>
        <span class="stat-label">Карточек</span>
    </div>
    
    <% if (deck.isPublic) { %>
        <div class="stat">
            <span class="stat-value">
                <i class="fas fa-globe"></i>
            </span>
            <span class="stat-label">Публичная</span>
        </div>
    <% } else { %>
        <div class="stat">
            <span class="stat-value">
                <i class="fas fa-lock"></i>
            </span>
            <span class="stat-label">Приватная</span>
        </div>
    <% } %>
</div>

<% if (!user || user.role !== 'admin') { %>
<div class="study-options">
    <h2>Начать обучение</h2>
    <div class="study-buttons">
        <% if (deck.Cards && deck.Cards.length > 0) { %>
            <a href="/decks/<%= deck.id %>/study/swipe" class="btn btn-primary btn-large">
                <i class="fas fa-play"></i> Обычный режим
            </a>
            <a href="/decks/<%= deck.id %>/study/speed" class="btn btn-primary btn-large">
                <i class="fas fa-bolt"></i> Скоростной вызов
            </a>
            
            <% if (user && user.id === deck.userId) { %>
                <a href="/cards/create?deckId=<%= deck.id %>" class="btn btn-primary btn-large">
                    <i class="fas fa-plus"></i> Добавить карточку
                </a>
            <% } else if (user && user.id !== deck.userId && deck.isPublic) { %>
                <button class="btn btn-primary btn-large" onclick="importDeck(<%= deck.id %>)">
                    <i class="fas fa-download"></i> Импортировать в мои колоды
                </button>
            <% } %>
        <% } else { %>
            
            <div class="no-cards-info">
                <p>Добавьте карточки, чтобы начать обучение</p>
            </div>
        <% } %>
    </div>
</div>
<% } %>

<div class="cards-list">
    <h2>Карточки в колоде (<%= deck.Cards ? deck.Cards.length : 0 %>)</h2>
    
    <% if (!deck.Cards || deck.Cards.length === 0) { %>
        <div class="empty-state">
            <i class="fas fa-inbox fa-2x"></i>
            <p>В этой колоде пока нет карточек</p>
            <% if (user && user.id === deck.userId) { %>
                <a href="/cards/create?deckId=<%= deck.id %>" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Добавить карточку
                </a>
            <% } %>
        </div>
    <% } else { %>
        <div class="cards-grid">
            <% deck.Cards.forEach((card, index) => { %>
                <div class="card-item">
                    <div class="card-header">
                        <span class="card-number">
                            <a href="/cards/<%= card.id %>" style="color: inherit; text-decoration: none;">
                                Карточка #<%= index + 1 %>
                            </a>
                        </span>
                        
                    </div>
                    
                    <div class="flashcard-preview" onclick="toggleCard(this)">
                        <div class="flashcard-preview-front">
                            <h3>Вопрос:</h3>
                            <p class="card-content"><%= card.question %></p>
                        </div>
                        <div class="flashcard-preview-back">
                            <h3>Ответ:</h3>
                            <p class="card-content"><%= card.answer %></p>
                        </div>
                    </div>
                    
                    <% if (card.tags) { %>
                        <div class="card-tags">
                            <% card.tags.split(',').forEach(tag => { %>
                                <span class="tag"><i class="fas fa-tag"></i> <%= tag.trim() %></span>
                            <% }); %>
                        </div>
                    <% } %>
                    
                    <div class="card-hint">
                        <small><i class="fas fa-hand-point-up"></i> Нажмите на карточку, чтобы увидеть ответ</small>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<script>
function toggleCard(element) {
    element.querySelector('.flashcard-preview').classList.toggle('flipped');
}

async function importDeck(deckId) {
    if (confirm('Импортировать эту колоду в вашу библиотеку?')) {
        try {
            const response = await fetch(`/api/decks/${deckId}/import`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                credentials: 'same-origin'
            });
            
            const data = await response.json();
            
            if (data.success) {
                alert('Колода успешно импортирована в вашу библиотеку!');
                window.location.href = '/dashboard';
            } else {
                alert('Ошибка при импорте колоды: ' + (data.message || 'Неизвестная ошибка'));
            }
        } catch (error) {
            console.error('Ошибка при импорте колоды:', error);
            alert('Ошибка при импорте колоды. Пожалуйста, попробуйте позже.');
        }
    }
}
</script>

