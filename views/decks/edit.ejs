<!-- views/decks/edit.ejs -->
<div class="form-container">
    <h1>Редактирование колоды</h1>
    
    <form action="/decks/<%= deck.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="form-label" for="name">Название колоды:</label>
            <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                value="<%= deck.name %>"
                required>
        </div>

        <div class="form-group">
            <label class="form-label" for="description">Описание:</label>
            <textarea 
                class="form-control" 
                id="description" 
                name="description" 
                rows="3"><%= deck.description || '' %></textarea>
        </div>

        <% if (!user || user.role !== 'admin') { %>
        <div class="form-group">
            <div class="checkbox-group">
                <input 
                    type="checkbox" 
                    id="isPublic" 
                    name="isPublic"
                    <%= deck.isPublic ? 'checked' : '' %>>
                <label for="isPublic">Сделать колоду публичной</label>
            </div>
            <small class="form-text">
                Публичные колоды видны другим пользователям и проходят модерацию
            </small>
        </div>
        <% } %>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Сохранить изменения
            </button>
            <a href="/decks/<%= deck.id %>" class="btn btn-outline">Отмена</a>
            
            <% if (deck.userId === user.id || user.role === 'admin') { %>
                <button type="button" 
                        class="btn btn-error" 
                        onclick="confirmDelete()">
                    <i class="fas fa-trash"></i> Удалить колоду
                </button>
            <% } %>
        </div>
    </form>
    
    <form id="deleteForm" 
          action="/decks/<%= deck.id %>?_method=DELETE" 
          method="POST" 
          style="display: none;">
    </form>
</div>

<script>
function confirmDelete() {
    if (confirm('Вы уверены, что хотите удалить эту колоду? Все карточки внутри также будут удалены.')) {
        document.getElementById('deleteForm').submit();
    }
}
</script>

