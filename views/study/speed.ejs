<script>

let currentCardIndex = 0;
let correctAnswers = 0;
let timer;
let timeLeft = 10;
let cardTimer; 
let sessionStarted = false;
let sessionStartTime;
let userAnswered = false; // Флаг, что пользователь уже ответил

// Переменные для перетаскивания
let isDragging = false;
let dragStartX = 0;
let dragStartY = 0;
let currentFlashcard = null;
let dragIndicator = null;

const cards = [
    <% cards.forEach((card, index) => { %>
        {
            id: <%= card.id %>,
            question: "<%= card.question.replace(/"/g, '\\"').replace(/\n/g, '\\n') %>",
            answer: "<%= card.answer.replace(/"/g, '\\"').replace(/\n/g, '\\n') %>"
        }<%= index < cards.length - 1 ? ',' : '' %>
    <% }); %>
];

// Инициализация сессии
function initSession() {
    if (!sessionStarted) {
        sessionStarted = true;
        sessionStartTime = Date.now();
        console.log('Скоростная сессия начата. Карточек:', cards.length);
    }
    
    if (cards.length === 0) {
        alert('В этой колоде нет карточек для обучения');
        window.location.href = '/decks/<%= deck.id %>';
        return;
    }
    
    loadCard(currentCardIndex);
    updateProgress();
    
    // Инициализация перетаскивания
    initDragAndDrop();
}

// Загрузка карточки
function loadCard(index) {
    console.log('Загрузка карточки', index + 1, 'из', cards.length);
    
    if (index >= cards.length) {
        console.log('Все карточки пройдены');
        endSession();
        return;
    }
    
    const card = cards[index];
    
   
    const questionContent = document.getElementById('questionContent');
    const answerContent = document.getElementById('answerContent');
    const currentCardSpan = document.getElementById('currentCard');
    const timeLeftSpan = document.getElementById('timeLeft');
    
    if (questionContent) questionContent.textContent = card.question;
    if (answerContent) answerContent.textContent = card.answer;
    if (currentCardSpan) currentCardSpan.textContent = index + 1;
    if (timeLeftSpan) timeLeftSpan.textContent = 10; 
    
   
    const flashcard = document.getElementById('flashcard');
    if (flashcard) {
        flashcard.classList.remove('flipped');
        flashcard.classList.remove('throw-right', 'throw-left');
        flashcard.style.transform = '';
        flashcard.style.transition = 'transform 0.6s';
    }
    
    userAnswered = false;
    
    
    clearInterval(timer);
    clearInterval(cardTimer);
    
    
    timeLeft = 10;
    
    
    const timerElement = document.getElementById('timer');
    const timeRemainingSpan = document.getElementById('timeRemaining');
    const timeProgressFill = document.getElementById('timeProgressFill');
    
    if (timerElement) {
        timerElement.textContent = timeLeft;
        timerElement.classList.remove('warning', 'danger');
    }
    
    if (timeRemainingSpan) timeRemainingSpan.textContent = timeLeft;
    if (timeProgressFill) timeProgressFill.style.width = '100%';
    
    // Очищаем предыдущий feedback
    const answerFeedback = document.getElementById('answerFeedback');
    if (answerFeedback) answerFeedback.innerHTML = '';
    
    // Запускаем таймер для карточки
    startCardTimer();
}

// Инициализация перетаскивания 
function initDragAndDrop() {
    const flashcard = document.getElementById('flashcard');
    const leftZone = document.getElementById('leftZone');
    const rightZone = document.getElementById('rightZone');
    
   
    dragIndicator = document.createElement('div');
    dragIndicator.className = 'drag-indicator';
    dragIndicator.innerHTML = '<i class="fas fa-arrows-alt"></i> Перетаскивание...';
    document.body.appendChild(dragIndicator);
    
    flashcard.addEventListener('mousedown', function(e) {
        // Проверяем ЛКМ
        if (e.button === 0) {
            
            if (userAnswered) return;
            
            console.log('Начало перетаскивания левой кнопкой мыши');
            startDrag(e, flashcard, leftZone, rightZone);
        }
    });
    
    // Отслеживание движения мыши
    document.addEventListener('mousemove', function(e) {
        if (isDragging && currentFlashcard) {
            updateDrag(e);
            checkDragOverZone(e, leftZone, rightZone);
        }
    });
    
  
    document.addEventListener('mouseup', function(e) {
        if (isDragging) {
            endDrag(e, leftZone, rightZone);
        }
    });
    
   
    flashcard.addEventListener('contextmenu', function(e) {
        e.preventDefault();
        return false;
    });
    
    // Добавляем обработчики для зон
    [leftZone, rightZone].forEach(zone => {
        zone.addEventListener('mouseenter', function() {
            if (isDragging) {
                this.classList.add('drag-over');
            }
        });
        
        zone.addEventListener('mouseleave', function() {
            this.classList.remove('drag-over');
        });
    });
    
   
    leftZone.classList.add('active');
    rightZone.classList.add('active');
}

// Начало перетаскивания
function startDrag(e, flashcard, leftZone, rightZone) {
    isDragging = true;
    currentFlashcard = flashcard;
    dragStartX = e.clientX;
    dragStartY = e.clientY;
    
    flashcard.classList.add('dragging');
    
    dragIndicator.classList.add('show');
    updateIndicatorPosition(e);
    
    console.log('Перетаскивание начато');
    
}

// Обновление позиции при перетаскивании
function updateDrag(e) {
    const deltaX = e.clientX - dragStartX;
    const deltaY = e.clientY - dragStartY;
    
    updateIndicatorPosition(e);
    
    currentFlashcard.style.transform = `translate(${deltaX}px, ${deltaY}px) rotate(${deltaX * 0.05}deg)`;
    currentFlashcard.style.transition = 'none';
}

// Проверка наведения на зоны
function checkDragOverZone(e, leftZone, rightZone) {
    const rectLeft = leftZone.getBoundingClientRect();
    const rectRight = rightZone.getBoundingClientRect();
    
    const isOverLeft = e.clientX >= rectLeft.left && 
                      e.clientX <= rectLeft.right && 
                      e.clientY >= rectLeft.top && 
                      e.clientY <= rectLeft.bottom;
    
    const isOverRight = e.clientX >= rectRight.left && 
                       e.clientX <= rectRight.right && 
                       e.clientY >= rectRight.top && 
                       e.clientY <= rectRight.bottom;
    
    leftZone.classList.toggle('drag-over', isOverLeft);
    rightZone.classList.toggle('drag-over', isOverRight);
}

// Завершение перетаскивания
function endDrag(e, leftZone, rightZone) {
    const rectLeft = leftZone.getBoundingClientRect();
    const rectRight = rightZone.getBoundingClientRect();
    
    // Проверяем, в какую зону бросили карточку
    const isOverLeft = e.clientX >= rectLeft.left && 
                      e.clientX <= rectLeft.right && 
                      e.clientY >= rectLeft.top && 
                      e.clientY <= rectLeft.bottom;
    
    const isOverRight = e.clientX >= rectRight.left && 
                       e.clientX <= rectRight.right && 
                       e.clientY >= rectRight.top && 
                       e.clientY <= rectRight.bottom;
    
    isDragging = false;
    dragIndicator.classList.remove('show');
    leftZone.classList.remove('drag-over');
    rightZone.classList.remove('drag-over');
    
    // СОХРАНЯЕМ currentFlashcard в локальную переменную
    const draggedCard = currentFlashcard;
    
    // Если пользователь уже ответил, не обрабатываем
    if (userAnswered) {
        if (draggedCard) {
            draggedCard.classList.remove('dragging');
            draggedCard.style.transform = '';
            draggedCard.style.transition = 'transform 0.3s ease';
        }
        currentFlashcard = null;
        return;
    }
    
    // Анимация броска и обработка ответа
    if (draggedCard) {
        if (isOverLeft) {
            draggedCard.classList.add('throw-left');
            setTimeout(() => {
                markAsIncorrect();
                if (draggedCard && draggedCard.parentNode) {
                    draggedCard.classList.remove('throw-left');
                }
            }, 500);
        } else if (isOverRight) {
            draggedCard.classList.add('throw-right');
            setTimeout(() => {
                markAsCorrect();
                if (draggedCard && draggedCard.parentNode) {
                    draggedCard.classList.remove('throw-right');
                }
            }, 500);
        } else {
            draggedCard.style.transform = '';
            draggedCard.style.transition = 'transform 0.3s ease';
            setTimeout(() => {
                draggedCard.classList.remove('dragging');
            }, 300);
        }
    }
    
    currentFlashcard = null;
}

function updateIndicatorPosition(e) {
    dragIndicator.style.left = e.clientX + 'px';
    dragIndicator.style.top = e.clientY + 30 + 'px';
}

// Таймер для карточки 
function startCardTimer() {
    let timePassed = 0;
    const totalTime = 10; 
    const timeProgressFill = document.getElementById('timeProgressFill');
    
    cardTimer = setInterval(function() {
        if (userAnswered) {
            clearInterval(cardTimer);
            return;
        }
        
        timePassed++;
        timeLeft = totalTime - timePassed;
        
        
        const timerElement = document.getElementById('timer');
        const timeRemainingSpan = document.getElementById('timeRemaining');
        const timeLeftSpan = document.getElementById('timeLeft');
        
        if (timerElement) timerElement.textContent = timeLeft;
        if (timeRemainingSpan) timeRemainingSpan.textContent = timeLeft;
        if (timeLeftSpan) timeLeftSpan.textContent = timeLeft;
        
        
        if (timeProgressFill) {
            const progressPercent = ((totalTime - timePassed) / totalTime) * 100;
            timeProgressFill.style.width = progressPercent + '%';
        }
        
        
        if (timerElement) {
            if (timeLeft <= 3) {
                timerElement.classList.add('danger');
                timerElement.classList.remove('warning');
            } else if (timeLeft <= 5) {
                timerElement.classList.add('warning');
                timerElement.classList.remove('danger');
            }
        }
        
        
        if (timeLeft <= 0) {
            clearInterval(cardTimer);
            
            
            if (!userAnswered) {
                
                userAnswered = true;
                
                
                flipCard();
                
                
                const answerFeedback = document.getElementById('answerFeedback');
                if (answerFeedback) {
                    answerFeedback.innerHTML = 
                        '<div class="feedback feedback-error">' +
                        '<i class="fas fa-clock"></i> Время вышло! Ответ засчитан как неверный.' +
                        '</div>';
                }
                
                
                console.log('Время вышло! Неправильный ответ.');
                
                setTimeout(function() {
                    nextCard();
                }, 2000);
            }
        }
    }, 1000);
}


// Переворот карточки (автоматически при ответе или окончании времени)
function flipCard() {
    const flashcard = document.getElementById('flashcard');
    if (flashcard) {
        flashcard.classList.add('flipped');
    }
    console.log('Карточка перевернута автоматически');
}

// Отметить как правильный ответ
function markAsCorrect() {
   
    if (userAnswered) return;
     
    userAnswered = true;
    
    correctAnswers++;
    const correctCountSpan = document.getElementById('correctCount');
    if (correctCountSpan) correctCountSpan.textContent = correctAnswers;
    console.log('Правильный ответ. Всего правильных:', correctAnswers);
    

    flipCard();
    
    const answerFeedback = document.getElementById('answerFeedback');
    if (answerFeedback) {
        answerFeedback.innerHTML = 
            '<div class="feedback" style="color: #4CAF50;">' +
            '<i class="fas fa-check-circle"></i> Правильно! Молодец!' +
            '</div>';
    }
    
    // Переходим к следующей карточке через 1 секунду
    setTimeout(function() {
        nextCard();
    }, 1000);
}

// Отметить как неправильный ответ
function markAsIncorrect() {

    if (userAnswered) return;

    userAnswered = true;
    
    console.log('Пользователь отметил как неправильный ответ');
    
    flipCard();
    
    const answerFeedback = document.getElementById('answerFeedback');
    if (answerFeedback) {
        answerFeedback.innerHTML = 
            '<div class="feedback feedback-error">' +
            '<i class="fas fa-times-circle"></i> Нужно повторить этот материал.' +
            '</div>';
    }
    
    setTimeout(function() {
        nextCard();
    }, 1000);
}

function nextCard() {
    currentCardIndex++;
    console.log('Переход к карточке', currentCardIndex + 1);
    
    if (currentCardIndex < cards.length) {
        loadCard(currentCardIndex);
        updateProgress();
    } else {
        console.log('Все карточки пройдены, завершение сессии');
        endSession();
    }
}

function updateProgress() {
    const progress = ((currentCardIndex) / cards.length) * 100;
    const progressFill = document.getElementById('progressFill');
    if (progressFill) {
        progressFill.style.width = progress + '%';
    }
    console.log('Прогресс:', progress.toFixed(1) + '%');
}

// Завершение сессии
async function endSession() {
    console.log('Завершение сессии...');
    
    const score = cards.length > 0 ? Math.round((correctAnswers / cards.length) * 100) : 0;
    const timeSpent = Math.floor((Date.now() - sessionStartTime) / 1000);
    
    console.log('Результаты:', {
