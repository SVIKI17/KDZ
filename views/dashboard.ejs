                    <span class="deck-author">
                        <i class="fas fa-user"></i> <%= deck.User ? deck.User.username : 'Неизвестный автор' %>
                    </span>
                    
                    <span class="deck-cards">
                        <i class="fas fa-cards"></i> 
                        <%= deck.Cards ? deck.Cards.length : 0 %> карточек
                    </span>
                </div>
                
                <div class="deck-actions">
                    <% if (deck.isPublic && deck.status === 'approved') { %>
                        <a href="/decks/<%= deck.id %>/study/swipe" class="deck-action-library primary">
                            <i class="fas fa-play"></i> Учить
                        </a>
                        <a href="/decks/<%= deck.id %>/study/speed" class="deck-action-library primary">
                            <i class="fas fa-bolt"></i> Скоростной режим
                        </a>
                        <a href="/decks/<%= deck.id %>" class="deck-action-library primary">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                    <% } else { %>
                        <span class="btn btn-outline btn-small disabled">
                            <i class="fas fa-clock"></i> На модерации
                        </span>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</div>
