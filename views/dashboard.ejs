<script>
// Функция для загрузки статистики изучения
async function loadStudyStats() {
  try {
    const response = await fetch('/api/dashboard/stats', {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    const data = await response.json();
    
    if (data.success) {
      // Обновляем статистику изученных карточек сегодня
      const studiedTodayElement = document.getElementById('studiedToday');
      if (studiedTodayElement) {
        studiedTodayElement.textContent = data.studiedToday || 0;
      }
    }
  } catch (error) {
    console.error('Ошибка при загрузке статистики:', error);
    const studiedTodayElement = document.getElementById('studiedToday');
    if (studiedTodayElement) {
      studiedTodayElement.textContent = '—';
    }
  }
}

// Загружаем статистику при загрузке страницы
document.addEventListener('DOMContentLoaded', function() {
    loadStudyStats();
    
    const statsElements = document.querySelectorAll('.stat-card h3');
    statsElements.forEach(element => {
        const originalValue = element.textContent;
        element.textContent = '0';
        
        // Анимация счетчика
        let startValue = 0;
        const endValue = parseInt(originalValue);
        const duration = 1500; 
        const increment = endValue / (duration / 16); 
        
        const timer = setInterval(() => {
            startValue += increment;
            if (startValue >= endValue) {
                clearInterval(timer);
                element.textContent = originalValue;
            } else {
                element.textContent = Math.floor(startValue);
            }
        }, 16);
    });
});
</script>

