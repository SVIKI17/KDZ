        <a href="/decks/create" class="action-btn unified-action">
            <div class="action-content-centered">
                <h3>Новая колода</h3>
                <p>Создайте коллекцию карточек</p>
            </div>
            <div class="action-glow"></div>
            <div class="action-shine"></div>
            <div class="action-wave"></div>
        </a>
        
        <a href="/cards/create" class="action-btn unified-action">
            <div class="action-content-centered">
                <h3>Новая карточка</h3>
                <p>Добавьте вопрос и ответ</p>
            </div>
            <div class="action-glow"></div>
            <div class="action-shine"></div>
            <div class="action-wave"></div>
        </a>
        
        <a href="/library" class="action-btn unified-action">
            <div class="action-content-centered">
                <h3>Библиотека</h3>
                <p>Исследуйте публичные коллекции</p>
            </div>
            <div class="action-glow"></div>
            <div class="action-shine"></div>
            <div class="action-wave"></div>
        </a>
    </div>
    
    <div class="dashboard-logout">
        <a href="/logout" class="btn btn-logout">
            <i class="fas fa-sign-out-alt"></i> Выход
        </a>
    </div>
</div>

<div class="dashboard-stats">
    <div class="stat-card">
        <h3><%= userDecks.length %></h3>
        <p>Мои колоды</p>
    </div>
    <div class="stat-card">
        <h3><%= userDecks.reduce((total, deck) => total + (deck.Cards ? deck.Cards.length : 0), 0) %></h3>
        <p>Мои карточки</p>
    </div>
    <div class="stat-card">
        <h3><%= publicDecks.length %></h3>
        <p>Публичных колод</p>
    </div>
    <div class="stat-card">
        <h3 id="studiedToday">0</h3>
        <p>Изучено сегодня</p>
    </div>
</div>

<div class="my-decks">
    <h2>Мои колоды</h2>
    
    <% if (userDecks.length === 0) { %>
        <div class="empty-state">
            <i class="fas fa-inbox fa-3x"></i>
            <h3>У вас пока нет колод</h3>
            <p>Создайте свою первую колоду для начала обучения</p>
            <a href="/decks/create" class="btn btn-primary">Создать колоду</a>
        </div>
    <% } else { %>
        <div class="row">
            <% userDecks.forEach(deck => { %>
                <div class="card deck-card">
                    <div class="deck-header">
                        <h3><%= deck.name %></h3>
                        <span class="deck-status <%= deck.status %>">
                            <%= deck.status === 'draft' ? 'Черновик' : 
                               deck.status === 'pending' ? 'На модерации' : 
                               deck.status === 'approved' ? 'Одобрено' : 'Отклонено' %>
                        </span>
                    </div>
                    
                    <p class="deck-description"><%= deck.description || 'Без описания' %></p>
                    
                    <div class="deck-meta">
                        <span class="deck-cards">
                            <i class="fas fa-cards"></i> 
                            <%= deck.Cards ? deck.Cards.length : 0 %> карточек
                        </span>
                        
                        <span class="deck-visibility">
                            <% if (deck.isPublic) { %>
                                <i class="fas fa-globe"></i> Публичная
                            <% } else { %>
                                <i class="fas fa-lock"></i> Приватная
                            <% } %>
                        </span>
                    </div>
                    
                    <div class="deck-actions">
                        <a href="/decks/<%= deck.id %>/study/swipe" class="deck-action-library primary">
                            <i class="fas fa-play"></i> Учить
                        </a>
                        <a href="/decks/<%= deck.id %>/study/speed" class="deck-action-library primary">
                            <i class="fas fa-bolt"></i> Скоростной режим
                        </a>
                        <a href="/decks/<%= deck.id %>" class="deck-action-library primary">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<% if (publicDecks && publicDecks.length > 0) { %>
<div class="public-decks">
    <h2>Публичные колоды для изучения</h2>
    
    <div class="row">
        <% publicDecks.forEach(deck => { %>
            <div class="card deck-card public-deck">
                <div class="deck-header">
                    <h3><%= deck.name %></h3>
                    <span class="deck-badge">
                        <i class="fas fa-users"></i> Публичная
                    </span>
                </div>
                
